module start_screen_renderer (
    input  wire       active_pixels,
    input  wire [9:0] x,
    input  wire [9:0] y,
    output reg  [23:0] pixel
);

    // Light blue background
    localparam BG = 24'h87CEFA;  

    // Text color
    localparam WHITE = 24'hFFFFFF;

    // Title text (large)
    localparam TITLE = "MINESWEEPER";

    // Instruction text (normal size)
    localparam LINE0 = "SW0 = RESET";
    localparam LINE1 = "KEY3 = START";
    localparam LINE2 = "KEYS MOVE THE CURSOR";
    localparam LINE3 = "SW9 = FLAG";
    localparam LINE4 = "SW8 = REVEAL";

    // Local wires for text pixel
    wire title_px;
    wire line0_px, line1_px, line2_px, line3_px, line4_px;

    // --- Draw Title (Scaled by 3Ã—) ---
    text_drawer_scaled #(
        .SCALE(3),
        .TEXT(TITLE),
        .X_CENTER(320),
        .Y_TOP(80)
    ) draw_title (
        .x(x), .y(y),
        .pixel_on(title_px)
    );

    // --- Draw Instruction Lines (normal size) ---
    text_drawer #(.TEXT(LINE0), .X_CENTER(320), .Y_TOP(200)) d0 (x, y, line0_px);
    text_drawer #(.TEXT(LINE1), .X_CENTER(320), .Y_TOP(220)) d1 (x, y, line1_px);
    text_drawer #(.TEXT(LINE2), .X_CENTER(320), .Y_TOP(240)) d2 (x, y, line2_px);
    text_drawer #(.TEXT(LINE3), .X_CENTER(320), .Y_TOP(260)) d3 (x, y, line3_px);
    text_drawer #(.TEXT(LINE4), .X_CENTER(320), .Y_TOP(280)) d4 (x, y, line4_px);

    // --- Output pixel ---
    always @(*) begin
        if (!active_pixels)
            pixel = 24'h000000;
        else begin
            pixel = BG;  

            if (title_px) pixel = WHITE;
            if (line0_px) pixel = WHITE;
            if (line1_px) pixel = WHITE;
            if (line2_px) pixel = WHITE;
            if (line3_px) pixel = WHITE;
            if (line4_px) pixel = WHITE;
        end
    end
endmodule
